@model SIB.Web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

@if (Request.Params["sucesso"] != null)
{    
    <script type="text/javascript">
        alert("Dados salvos com Sucesso.");
    </script>
}

<hgroup class="title">
    <h1>CEB - SU BETIM Versão: 1.00.00</h1>
</hgroup>

<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()    

    <fieldset>
        <legend>Log in</legend>
                                                              
            <div class="control-group">
                <label class="control-label">Nome de usuário</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new {@class = "input-xlarge", @placeholder = "Usuário" } )
                    @Html.ValidationMessageFor(m => m.UserName)                
                </div>
            </div>            
            
            <div class="control-group">
                <label class="control-label">Senha</label>
                <div class="controls">                
                    @*@Html.PasswordFor(m => m.Password, new {@class = "input-xlarge", @placeholder = "Senha" } )*@
                    <input type="password" id="Password" name="Password" placeholder="Senha" value="@Model.Password" class="input-xlarge" />
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
        
            <label class="checkbox">
              @Html.CheckBoxFor(m => m.RememberMe) Lembrar senha
            </label>            
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="entrar">Entrar</button>
            </div>
    </fieldset>
    <br />    
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
