@model SIB.Web.Models.Empresa.QualidadeVeiculo

@{
    ViewBag.Title = "Index";
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

@using (Html.BeginForm("Salvar", "VeiculoLiberado"))
{
    Html.ValidationSummary(true);
    
    <fieldset> 
                     
        <div class="hero-unit" style="text-align:center">
          <p style="font-size:30px;color:red; font-weight:bold">Atenção!</p>
            <br /><br />
          
          <p style="font-size:30px;color:green;">            
              @Model.veiculoLiberado            
          </p>
        </div>

        <div class="form-actions">            
            <button type="reset" class="btn">Voltar</button>
            <button type="submit" class="btn btn-primary">Próximo</button>
        </div>
    </fieldset>
}