@{
    ViewBag.Title = "Impressão do Checklist";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

<script type="text/javascript">
    $(document).ready(function (e) {
        var janeleImpressao = window.open('@Url.Action("geraRelatorioImpressao", "ImpressaoChecklist")');
        janeleImpressao.focus();
    });
</script>


<div class="container">
    <div class="hero-unit" style="text-align:center">
        <p style="font-size:30px;color:red; font-weight:bold">Para imprimir o checklist, abra a aba do documento e aperte o botão imprimir</p>
        <br /><br />
        @Html.ActionLink("Retornar ao Login", "logOut", "Account", "", new { @class = "btn btn-success btn-block" })

    </div>
</div>
