@model SIB.Web.Models.Empresa.VeiculoLiberado

@{
    ViewBag.Title = "Qualidade do Veículo";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}

@*<script src="@Url.Content("~/Scripts/sib_veiculo_liberado.js")" type="text/javascript"></script>*@

@using (Html.BeginForm("Index", "VeiculoLiberado"))
{
    Html.ValidationSummary(true);
    
    <fieldset> 
                     
        <div class="hero-unit" style="text-align:center">
          <p style="font-size:30px;color:red; font-weight:bold">Atenção!</p>
            <br /><br />
          
          <p style="font-size:30px;color:green;">            
            Veículo Liberado:  <span id="status" name="status">@Model.veiculoLiberado</span>                                                                                   
          </p>
          
            @Html.Raw("<pre style=\"font-size:12px;background-color:#eeeeee; border-color:#eeeeee\">" + Html.Encode(@Model.motivos) + "</pre>")          

        </div>

        <div class="form-actions">            
            <input type="submit" name="Voltar" id="Voltar" value="Voltar" class="btn" />
            <input type="submit" name="Proximo" id="Proximo" value="Salvar" class="btn btn-primary" />
        </div>
    </fieldset>
}